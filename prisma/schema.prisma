generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma-app/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Episode {
  id          Int    @id @default(autoincrement())
  topic       String
  date        DateTime
  title       String
  description String
}

model Post {
  id       Int    @id @default(autoincrement())
  imageUrl String
  title    String
  date     DateTime
}

model TeamMember {
  id             Int     @id @default(autoincrement())
  name           String
  position       String
  imageUrl       String
  showOnMainPage Boolean @default(false)
  linkedinLink   String
  githubLink     String
  twitterLink    String
}

model Subscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}
