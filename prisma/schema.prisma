generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Episode {
  id          String   @id @default(uuid())
  slug        String
  category    String
  date        DateTime @default(now())
  title       String
  abstract    String
  description String
  transcript  String
  audio       String
  tags        String[]
  Post        Post[]
}

model Post {
  id        String   @id @default(uuid())
  slug      String
  image     String
  title     String
  abstract  String
  text      String
  date      DateTime @default(now())
  tags      String[]
  episode   Episode  @relation(fields: [episodeId], references: [id])
  episodeId String
}

model TeamMember {
  id             String  @id @default(uuid())
  slug           String
  name           String
  position       String
  imageUrl       String
  showOnMainPage Boolean @default(false)
  linkedinLink   String
  githubLink     String
  twitterLink    String
}

model Subscription {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
